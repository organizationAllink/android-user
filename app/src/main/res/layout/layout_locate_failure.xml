<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_locate_failure"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_locate_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_locate_failure"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_locate_failure"
        android:textSize="16sp"
        android:textColor="@color/black_999"
        android:text="@string/locate_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_locate_failure_locate"
        android:text="@string/go_to_locate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_selector"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_locate_failure"
        android:layout_width="120dp"
        android:layout_height="40dp" />
</RelativeLayout>