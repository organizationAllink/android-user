<?xml version="1.0" encoding="utf-8"?>
<!--附近活动列表项布局-->
<android.support.v7.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.LinearLayoutCompat
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <!--活动图片开始-->
        <ImageView
            android:id="@+id/iv_fragment_near_item_pic"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <!--活动图片结束-->
        <!--活动信息开始-->
        <RelativeLayout
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_fragment_near_item_activity_name"
                tools:text="钢琴艺术教育"
                android:textSize="16sp"
                android:textColor="@color/black_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginBottom="4dp"
                android:id="@+id/rl_fragment_near_item_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_above="@id/tv_fragment_near_enroll_number"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fragment_near_item_price"
                    tools:text="￥2000"
                    android:textColor="@color/price_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginEnd="4dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_fragment_near_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_map" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fragment_near_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black_666"
                    android:textSize="12sp"
                    tools:text="1.2km" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_alignParentStart="true"
                android:id="@+id/tv_fragment_near_enroll_number"
                android:layout_alignParentBottom="true"
                tools:text="已有12人报名"
                android:textSize="14sp"
                android:textColor="@color/black_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--活动信息结束-->
    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg_eee"
        />
</android.support.v7.widget.LinearLayoutCompat>